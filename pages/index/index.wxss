page{
  height: 100%;
}
.pa-content{
  height:100%;
  background-color: #eeeeee;
}
.header{
  width: 100%;
  height: 30px;
  line-height: 30px;
  display: flex;
  align-items: center;
  flex-direction:column;
  background-color: #000;
  color: #fff;
}
.pa-grid{
  box-sizing: border-box;
  display: flex;
  flex-direction:row;
  width: 100%;
  flex-wrap: wrap;
}
.pa-grid .pa-grid-item{
  /*flex: 1;*/
  width: calc(100% / 3);
  box-sizing: border-box;
  text-align: center;
  height: 80px;
  line-height:80px;
  background-color: #ffffff;
  border: 1rpx solid #eeeeee;
}